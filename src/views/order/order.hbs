<head>
    <link rel="stylesheet" type="text/css" href="/css/orderPage.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <!-- Icon -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css"
        integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.1/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
</head>

<div class="myListCourse d-flex" >

    <!-- Begin: My List Body -->
    <div class="col m-5">
        <h6 class="font-text container">MY ORDER</h6>
        {{!-- 1: Create Course and Filter Search --}}
        <div class="container d-flex searchInMyList border border-gray rounded">

            {{!-- Search Filter --}}
            <div class="d-flex align-items-center input-group mr-2">
                <input class="form-control rounded" id="myInput" type="text" placeholder="Search your order">

                <script>
                    $(document).ready(function () {
                        $("#myInput").on("keyup", function () {
                            var value = $(this).val().toLowerCase();
                            console.log(value);
                            $(".listOfCourse").filter(function () {
                                console.log(typeof $(this).text().toLowerCase().indexOf(value) > -1);
                                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                            });
                        });
                    });
                </script>
            </div>

            
        </div>

        {{!-- 2: List of Course --}}
        <script>
            for (let i = 0; i < 5; i++) {
                document.write(`
                            <div class="listOfCourse">
            <div class="container course border border-dark rounded">
                <div class=" d-flex courseImgAndInfo">
                    <a href="/api/teachers/editCourse" class="imgCourseBox">
                        <img src="/img/product/PM1.jpg" alt="This is image of HTML course">
                    </a>
                    <div class="ud-unstyled-list ">
                        <div class="listItem">
                            <p style="font-weight: 600">${i} Lip Stick</p>
                        </div>
                        <div class="listItem">
                            <p>Date: ${i + 1}/2022</p>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between flex-wrap" >
                    <div class="ud-unstyled-list rating"  style="margin-right:5rem;">
                        <div class="listItem justify-content-center align-items-center" style="width: 9.5rem; height: 2.5rem">
                            <div>Total cost: $${i+100}</div>
                        </div>
                    </div>
                    <div class="box_btn_edit">
                       <a href="#"><button type="button" class="btn border border-dark btn_edit">Detail</button></a>
                    </div>
                </div>

            </div>
        </div>
                            `)
            }
        </script>

    </div>

    <!-- End: My List Body -->

</div>